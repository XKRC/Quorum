package Libraries.Game.Graphics.ModelLoaders

use Libraries.Compute.Vector3
class VertexNumbers
    Vector3 vector
    number width = 1
    boolean hasWidth = false

    action GetWidth returns number
        return width
    end

    action GetVector returns Vector3
        return vector
    end

    action SetWidth(number width)
        me:width = width
        hasWidth = true
    end

    action HasWidth returns boolean
        return hasWidth
    end
end
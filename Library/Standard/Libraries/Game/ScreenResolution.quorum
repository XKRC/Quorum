package Libraries.Game

class ScreenResolution 
    integer width = 0
    integer height = 0
    integer frequency = 0
    integer redBits = 0
    integer greenBits = 0
    integer blueBits = 0
    boolean fullscreen = false
    
    action GetWidth returns integer
        return width
    end

    action GetHeight returns integer
        return height
    end

    action GetFrequency returns integer
        return frequency
    end

    action GetRedBits returns integer
        return redBits
    end

    action GetGreenBits returns integer
        return greenBits
    end
    
    action GetBlueBits returns integer
        return blueBits
    end

    action IsFullscreen returns boolean
        return fullscreen
    end
end
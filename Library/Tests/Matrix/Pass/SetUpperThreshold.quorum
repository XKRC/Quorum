use Libraries.Compute.Matrix

class Main 
    action Main
        Matrix matrix
        matrix:Fill(3, 3, 0.0)
        Fill(matrix)
        matrix = matrix:SetUpperThreshold(6.0, 6.0)
        CheckResult(matrix:ToText())
    end

    action CheckResult(text result)
        text answer = ""
        text cr = answer:GetCarriageReturn()
        answer = "|1.0, 2.0, 3.0|"+cr+"|4.0, 5.0, 6.0|"+cr+"|6.0, 6.0, 6.0|"
        if answer = result
            output "pass"
        else
            output "fail"
        end
    end

    action Fill(Matrix matrix) returns Matrix
        number value = 1.0
        r = 0
        repeat matrix:GetRows() times
            c = 0
            repeat matrix:GetColumns() times
                matrix:Set(r, c, value)
                value = value + 1
                c = c + 1
            end
            r = r + 1
        end
        return matrix
    end
end
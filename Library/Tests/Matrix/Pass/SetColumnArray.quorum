use Libraries.Compute.Matrix
use Libraries.Containers.Array

class Main 
    action Main
        Matrix matrix
        matrix:Fill(2, 3, 0.0)
        Array<number> array
        array:Add(1.1)
        array:Add(2.1)
        matrix:SetColumn(0, array)
        CheckResult(matrix:ToText())
    end

    action CheckResult(text result)
        text answer = "|1.1, 0.0, 0.0|
|2.1, 0.0, 0.0|"
        text lf = answer:GetLineFeed()
        text cr = answer:GetCarriageReturn()
        answer = answer:Replace(cr, lf)
        result = result:Replace(cr, lf)
        if answer = result
            output "pass"
        else
            output "fail"
        end
    end
end
use Libraries.Compute.Matrix
use Libraries.Containers.Array

class Main 
    action Main
        Matrix matrix
        matrix:Fill(2, 3, 0.0)
        Fill(matrix)
        Array<number> row1 = matrix:GetRowArray(1)
        CheckResult(row1)
    end

    action CheckResult(Array<number> resultArray)
        text result = ""
        i = 0
        repeat resultArray:GetSize() times
            result = result + resultArray:Get(i)
            if i < resultArray:GetSize() - 1
                result = result + ", "
            end
            i = i + 1
        end
        text answer = "4.0, 5.0, 6.0"
        text lf = answer:GetLineFeed()
        text cr = answer:GetCarriageReturn()
        answer = answer:Replace(cr, lf)
        result = result:Replace(cr, lf)
        if answer = result
            output "pass"
        else
            output "fail"
        end
    end

    action Fill(Matrix matrix) returns Matrix
        number value = 1.0
        r = 0
        repeat matrix:GetRows() times
            c = 0
            repeat matrix:GetColumns() times
                matrix:Set(r, c, value)
                value = value + 1
                c = c + 1
            end
            r = r + 1
        end
        return matrix
    end
end
use Libraries.Compute.Matrix

class Main 
    action Main
        Matrix matrix
        matrix:Fill(4, 4, 0.0)
        Fill(matrix)
        matrix = matrix:Transpose()
        CheckResult(matrix:ToText())
    end

    action CheckResult(text result)
        text answer = ""
        text cr = answer:GetCarriageReturn()
        answer = "|1.0, 5.0, 9.0, 13.0|"+cr+"|2.0, 6.0, 10.0, 14.0|"+cr+"|3.0, 7.0, 11.0, 15.0|"+cr+"|4.0, 8.0, 12.0, 16.0|"
        if answer = result
            output "pass"
        else
            output "fail"
        end
    end

    action Fill(Matrix matrix) returns Matrix
        number value = 1.0
        r = 0
        repeat matrix:GetRows() times
            c = 0
            repeat matrix:GetColumns() times
                matrix:Set(r, c, value)
                value = value + 1
                c = c + 1
            end
            r = r + 1
        end
        return matrix
    end
end